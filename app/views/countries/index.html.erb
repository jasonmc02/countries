<p id="notice"><%= notice %></p>

<h1>Listing Countries</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Visited</th>
      <th>Population</th>
      <th>Size</th>
      <th>Currency</th>
      <th>Language</th>
      <th>Bio</th>
      <th>Featured</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @countries.each do |country| %>
      <tr>
        <td><%= country.name %></td>
        <td><%= country.visited %></td>
        <td><%= country.population %></td>
        <td><%= country.size %></td>
        <td><%= country.currency %></td>
        <td><%= country.language %></td>
        <td><%= country.bio %></td>
        <td><%= country.featured %></td>
        <td><%= link_to 'Show', country %></td>
        <td><%= link_to 'Edit', edit_country_path(country) %></td>
        <td><%= link_to 'Destroy', country, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

